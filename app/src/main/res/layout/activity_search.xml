<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/diet_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="124dp"
        android:textSize="12sp"
        android:text="Diet Restriction" />

    <Spinner
        android:id="@+id/diet_spinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/diet_textView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="66dp" />

    <TextView
        android:id="@+id/serving_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/diet_textView"
        android:layout_below="@+id/diet_textView"
        android:layout_marginTop="30dp"
        android:textSize="12sp"
        android:text="Serving Restriction" />

    <Spinner
        android:id="@+id/serving_spinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/serving_textView"
        android:layout_alignStart="@+id/diet_spinner" />

    <TextView
        android:id="@+id/prepTime_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/serving_textView"
        android:layout_below="@+id/serving_textView"
        android:layout_marginTop="30dp"
        android:textSize="12sp"
        android:text="Preparation Time" />

    <Spinner
        android:id="@+id/prepTime_spinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/prepTime_textView"
        android:layout_alignStart="@+id/serving_spinner" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prepTime_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:background="@drawable/transparent_button"
        android:text="Search"
        android:textColor="@color/button_text_color" />


</RelativeLayout>